---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<main class="container pt-14 md:pt-24 space-y-12">
  <!-- Hero -->
  <section>
    <h1 class="text-4xl md:text-6xl font-black leading-tight mb-4">
      Nathan Bullock
    </h1>
    <p class="text-lg md:text-xl text-[var(--muted)] max-w-2xl">
      Sysadmin • DevOps • Homelab tinkerer. Building resilient systems that just work.
    </p>
  </section>

  <!-- About -->
  <section>
    <h2 class="text-2xl font-bold mb-3">About</h2>
    <div class="card">
      <p>
        I manage infrastructure at scale—from school district networks to my own Proxmox clusters. Passionate about automation, monitoring, and clean design.
      </p>
    </div>
  </section>

  <!-- Projects preview -->
  <section>
    <h2 class="text-2xl font-bold mb-3">Featured Projects</h2>
    <div class="grid md:grid-cols-3 gap-6">
      <a href="/projects#cryoai" class="card block">
        <h3 class="font-semibold text-lg">CryoAI VM</h3>
        <p class="text-[var(--muted)]">Local AI with GPU passthrough and Ollama.</p>
      </a>
      <a href="/projects#weather" class="card block">
        <h3 class="font-semibold text-lg">Weather Engine</h3>
        <p class="text-[var(--muted)]">RTL_433 sensors integrated into Home Assistant with custom alerts.</p>
      </a>
      <a href="/projects#decoy" class="card block">
        <h3 class="font-semibold text-lg">DecoyBotPage</h3>
        <p class="text-[var(--muted)]">Cloudflare honeypot with stealth logging.</p>
      </a>
    </div>
  </section>

  <!-- Contact -->
  <section id="contact">
    <h2 class="text-2xl font-bold mb-3">Contact</h2>
    <div class="card">
      <p>Email: <strong>nbadmin@nbdevlab.com</strong></p>
      <p>GitHub: <a href="https://github.com/nbull" target="_blank" rel="noreferrer">@nbull</a></p>
    </div>
  </section>
</main>

<footer class="mt-16 mb-10">
  <div class="container text-center text-sm text-[var(--muted)]">
    <p>© 2025 Nathan Bullock. Built with Astro • Deployed on Cloudflare.</p>
  </div>
</footer>
</html>
